<?xml version="1.0" encoding="UTF-8"?>
<project name="Object-Oriented Programming Language with Subtyping and Subclassing" default="build" basedir=".">
  <property name="src" location="src" />
  <property name="build" location="build" />
  <property name="dist" location="dist" />
  <property name="grammar" location="grammar" />
  <property name="antlrOutput" location="${src}/ch/codedump/ooplss/antlr" />
  <property name="lib" location="lib"/>
  <property name="antAntlr" location="${lib}/ant-antlr3.jar" />

  <taskdef resource="org/apache/tools/ant/antlr/antlib.xml"
    classpath="${antAntlr}" />

  <path id="classpath">
    <fileset dir="${lib}" includes="**/*.jar" />
  </path>

  <target name="build">
    <antcall target="build-grammar" />
  </target>

  <target name="build-grammar">
    <mkdir dir="${antlrOutput}" />
    <ant-antlr3
      target="${grammar}/Ooplss.g"
      verbose="true"
      outputdirectory="${antlrOutput}">
      <classpath refid="classpath" />
    </ant-antlr3>
  </target>

</project>
